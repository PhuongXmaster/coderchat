<div class="banner">
    <div class="container">
        <div class="row">
            <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5">
                <h3>Sign up for Coder Chat</h3>
                <p></p>
                <div class="signup-form">
                  <%= form_for @user || User.new do |f| %>
                    <div class="form-group">
                      <%= f.text_field 'email', class: 'form-control', placeholder: 'your e-mail' %>
                    </div>
                     <div class="form-group">
                      <%= f.text_field 'name', class: 'form-control', placeholder: 'name' %>
                    </div>
                    <div class="form-group">
                      <div class="half-width">
                        <%= f.password_field 'password', class: 'form-control', placeholder: 'password' %>
                      </div>
                      <div class="half-width">
                        <%= f.password_field 'password_confirmation', class: 'form-control', placeholder: 'confirmation' %>
                      </div>
                    </div>
                    <% if @user && @user.errors.any? %>
                      <div class="alert alert-danger" role="alert">
                        <ul>
                          <% @user.errors.full_messages.each do |err| %>
                            <li>
                              <strong><%= err %></strong>
                            </li>
                          <% end %>
                        </ul>
                      </div>
                    <% end %>
                    <div class="form-group">
                        <%= f.submit 'Sign up', class: 'btn btn-block btn-primary btn-lg' %>
                    </div>
                  <% end %>
                </div>
                <div class="additional-links">By signing up you agree to <a href="#">Terms of Use</a> and <a href="#">Privacy</a></div>
            </div>
        </div>
    </div>
</div>
