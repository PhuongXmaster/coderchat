<a name="about"></a>
<div class="intro-header">
    <div class="container">

        <div class="row">
            <div class="col-lg-12">
                <div class="intro-message">
                    <h1>Coder Chat</h1>
                    <h3>A chat client for the coders</h3>
                    <hr class="intro-divider">
                    <ul class="list-inline intro-social-buttons">
                        <li>
                            <%= link_to new_session_path, class: 'btn btn-secondary btn-lg' do %>
                              <i class="fa fa-twitter fa-fw"></i> <span class="network-name">Sign in</span>
                            <% end %>
                        </li>
                        <li>
                            <%= link_to new_user_path, class: 'btn btn-secondary btn-lg' do %>
                              <i class="fa fa-github fa-fw"></i> <span class="network-name">Sign up</span>
                            <% end %>
                        </li>
                        <li>
                            <%= link_to '#', class: 'btn btn-secondary btn-lg' do %>
                              <i class="fa fa-facebook fa-fw"></i> <span class="network-name">Facebook</span>
                            <% end %>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <!-- /.container -->

</div>
